<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="persistenceUnit"
		transaction-type="RESOURCE_LOCAL">
		<class>org.justjsf.proxibanque.model.SavingAccount</class>
		<class>org.justjsf.proxibanque.model.CheckingAccount</class>
		<class>org.justjsf.proxibanque.model.Account</class>
		<class>org.justjsf.proxibanque.model.Customer</class>
		<class>org.justjsf.proxibanque.model.Advisor</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>

</persistence>